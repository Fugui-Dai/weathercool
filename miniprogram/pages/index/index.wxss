/* Enhanced Dynamic Bubbles with stronger effects */
.bubbles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 3;
  pointer-events: none;
}

.bubble {
  position: absolute;
  bottom: -100rpx;
  width: 60rpx;
  height: 60rpx;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
  border-radius: 50%;
  opacity: 0.9;
  animation: rise linear infinite;
  pointer-events: none;
  box-shadow: 0 0 35rpx rgba(255, 255, 255, 0.8);
  z-index: 4;
}

/* Even-numbered bubbles with light blue tint */
.bubble:nth-child(even) {
  background: rgba(135, 206, 250, 0.3);
  box-shadow: 0 0 30rpx rgba(135, 206, 250, 0.7);
}

/* Odd-numbered bubbles with light cyan tint */
.bubble:nth-child(odd) {
  background: rgba(175, 238, 238, 0.3);
  box-shadow: 0 0 30rpx rgba(175, 238, 238, 0.7);
}

/* Special effects for certain bubbles */
.bubble:nth-child(3n) {
  background: rgba(127, 255, 212, 0.3);
  box-shadow: 0 0 35rpx rgba(127, 255, 212, 0.8);
  filter: blur(1px);
}

.bubble:nth-child(4n) {
  background: rgba(173, 216, 230, 0.3);
  box-shadow: 0 0 35rpx rgba(173, 216, 230, 0.8);
  filter: blur(0.5px);
}

@keyframes rise {
  0% {
    transform: translateY(0) scale(0.4) rotate(0deg);
    opacity: 0.4;
  }
  20% {
    opacity: 0.8;
  }
  50% {
    transform: translateY(-50vh) scale(0.9) rotate(45deg);
    opacity: 0.9;
  }
  80% {
    opacity: 0.8;
  }
  100% {
    transform: translateY(-100vh) scale(1.1) rotate(90deg);
    opacity: 0;
  }
}

