/* Make sure all content stays above bubbles */
.title, .header, .ytt, .hourweather24, .life {
  position: relative;
  z-index: 5;
}

/* Modify text transitions to avoid flickering */
text {
  /* Remove the general transition that might be causing flicker */
  transition: color 0.3s ease, text-shadow 0.3s ease;
  /* Add will-change for smoother rendering */
  will-change: color, text-shadow;
}

/* Main title colorful effect */
.title text {
  background: linear-gradient(90deg, #FF9AA2, #FFB7B2, #FFDAC1, #E2F0CB, #B5EAD7, #C7CEEA);
  background-size: 600% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: gradientText 12s linear infinite;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.1);
  font-weight: bold;
}

@keyframes gradientText {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Temperature with glow effect */
.temperature {
  color: #FF9AA2;
  font-size: 86rpx;
  font-weight: bold;
  text-shadow: 0 0 20rpx rgba(255, 154, 162, 0.7);
  animation: temperaturePulse 4s ease infinite;
  letter-spacing: -2rpx;
}

@keyframes temperaturePulse {
  0%, 100% { text-shadow: 0 0 20rpx rgba(255, 154, 162, 0.7); }
  50% { text-shadow: 0 0 30rpx rgba(255, 154, 162, 0.9); }
}

/* Weather condition text */
.weather {
  color: #FFB7B2;
  font-weight: bold;
  text-shadow: 0 0 15rpx rgba(255, 183, 178, 0.6);
}

.comfort {
  color: #FFDAC1;
  text-shadow: 0 0 15rpx rgba(255, 218, 193, 0.6);
}

/* Header details text */
.header view:nth-child(3) text {
  color: #E2F0CB;
  text-shadow: 0 0 12rpx rgba(226, 240, 203, 0.5);
}

/* Section titles with rainbow effect */
scroll-view > text {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(90deg, #FF9AA2, #FFB7B2, #FFDAC1, #E2F0CB, #B5EAD7, #C7CEEA);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.1);
  padding: 4rpx 0;
  margin-left: 10rpx;
  margin-top: 10rpx;
  display: inline-block;
}

/* Fix flickering in the 今天、明天、后天 section */
.ytt {
  /* Add stability to the container */
  transform: translateZ(0);
  backface-visibility: hidden;
  -webkit-font-smoothing: antialiased;
}

.ytt .item {
  /* Prevent layout shifts */
  height: auto;
  min-height: 60rpx;
  /* Force hardware acceleration */
  transform: translateZ(0);
}

.ytt .item .temp text {
  /* Remove transitions for these specific elements */
  transition: none;
  /* Use static colors without animations */
  display: inline-block;
  /* Prevent text from jumping */
  height: 1.4em;
}

.ytt .item .temp text:first-child {
  color: #B5EAD7;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(181, 234, 215, 0.5);
}

.ytt .item .temp text:last-child {
  color: #C7CEEA;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(199, 206, 234, 0.5);
}

.ytt .item .weather text {
  color: #9ED8DB;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(158, 216, 219, 0.5);
  /* Remove transitions */
  transition: none;
  display: inline-block;
  /* Prevent text from jumping */
  height: 1.4em;
